<div id="product-index" class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1>Listing products</h1>

      <%= will_paginate %>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td class="col-name"><%= product.title %></td>
              <td class="col-desc"><%= product.category.cat_name %></td>
              <td><%= link_to 'View', product %></td>
              <td><%= link_to 'Edit', edit_product_path(product) %></td>
              <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= will_paginate %>

      <br>

      <%= link_to 'New Product', new_product_path, class: "submitbtn" %>
    </div>
  </div>
</div>