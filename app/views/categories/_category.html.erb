<div class="container product-category">
	<div class="row">
		<div class="col-sm-12">
			<h2><%= category.cat_name %></h2>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<% category.products.sort.each do |p| %>
				<div class="col-sm-3">
					<a rel="nofollow" data-method="put" href="/products/<%= p.id %>/analytics" class="button product-block col-sm-10 col-sm-offset-1">
						<h3><%= p.title %> <% if signed_in? %>Views:  <% if p.views == nil %>0<% end %><%= p.views %> <% end %></h3>
						<div class="product-image" style="background: url('<%= p.product_img_url %>'); background-size: contain; background-repeat: no-repeat; background-position: center;"> </div>
					</a>
					<% if signed_in? %>	        
				        <a href="/products/<%= p.id %>/edit">EDIT</a>
				    <% end %>	
				</div>
			<% end %>
		</div>
	</div>
</div>
<a class="button" rel="nofollow" data-method="put" href="/products/1/analytics">Analytics</a>