<div class="container product-category">
	<div class="row">
		<div class="col-sm-12">
			<h2><%= category.cat_name %></h2>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<% category.products.each do |p| %>
				<div class="col-sm-3">
					<a href="#" class="product-block col-sm-10 col-sm-offset-1">
						<h3><%= p.title %></h3>
						<img src="/assets/products/191_ocf_logo_.jpg" />
					</a>
				</div>
			<% end %>
		</div>
	</div>
</div>