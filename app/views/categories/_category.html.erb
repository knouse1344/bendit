<div class="container product-category">
	<div class="row">
		<div class="col-sm-12">
			<h2><%= category.cat_name %></h2>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<% category.products.each do |p| %>
				<div class="col-sm-3">
					<a target="_blank" href="<%= p.product_url %>" class="product-block col-sm-10 col-sm-offset-1">
						<h3><%= p.title %></h3>
						<div class="product-image" style="background: url('<%= p.product_img_url %>'); background-size: contain; background-repeat: no-repeat; background-position: center;"> </div>
					</a>
					<% if signed_in? %>	        
				        <a href="/products/<%= p.id %>/edit">EDIT</a>
				    <% end %>	
				</div>
			<% end %>
		</div>
	</div>
</div>