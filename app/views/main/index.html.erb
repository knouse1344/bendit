<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

<% if signed_in? %>
	<%= form_for @homepage do |h| %>
		<div id="index">
			<%= @homepage.content.html_safe %>
		</div>

		<%= h.text_field :content, id: "pageContent", class: "form-control homepageinput" %>
		<%= h.file_field :imageone, :onchange =>"validateFiles(this);", class: "imageoneInput file-input" %>
		<%= h.file_field :imagetwo, :onchange =>"validateFiles(this);", class: "imagetwoInput file-input" %>
		<%= h.file_field :imagethree, :onchange =>"validateFiles(this);", class: "imagethreeInput file-input" %>
	<% end %>
<% else %>

	<div id="index">
		<%= @homepage.content.html_safe %>
	</div>

<% end %>


<script>

	var onIndex = true

	<% if signed_in? %>
		var onAdmin = true
	<% else %>
		var onPublic = true
	<% end %>


	// Set Image Vars
	var img01 = "<%= @homepage.imageone %>"
	$(".imageone").attr("src", img01)

	var img02 = "<%= @homepage.imagetwo %>"
	$(".imagetwo").attr("src", img02)

	var img03 = "<%= @homepage.imagethree %>"
	$(".imagethree").attr("src", img03)

</script>

